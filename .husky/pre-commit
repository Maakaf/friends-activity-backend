#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' | grep -v '\.d\.ts$' || true)

if [ -z "$STAGED_TS_FILES" ]; then
  exit 0
fi

echo "üîç Running ESLint on staged TypeScript files..."
echo "$STAGED_TS_FILES" | xargs npx eslint --max-warnings=0
